#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "entidades.h"
#include "ABM.h"

int main(void) {

	char opcion;
	est_fecha date;
	est_electro aparatito;

do{
	printf("Ingrese una opcion: ");
	printf("\nA) Cargar y mostrar una fecha ");
	printf("\nB) Cargar y mostrar un electro domestico");
	printf("\nC) ");
	printf("\nD) ");
	printf("\nE) ");
	printf("\nF) ");
	printf("\nG) ");
	printf("\nH) ");
	printf("\nI) SALIR ");
	printf("\nOpcion seleccionada: ");
	fflush(stdin);
	scanf("%c", &opcion);
	switch(opcion)
	{
		case 'a':
			date = cargarFecha();
			mostrarFecha(date);
			system ("pause");
			break;
		case 'b':
			aparatito = cargarElectrodomestico();
			mostrarElectrodomestico(aparatito);
			system ("pause");
			break;
		case 'c':
		case 'd':
		case 'e':
		case 'f':
		case 'g':
		case 'h':
			break;
		case 'i':
			printf("Saliendo del programa\n");\
			system("pause");
			break;
		default:
			printf("Opcion Incorrecta\n");
			system("pause");
			break;
	}
	system("cls");
  }while(opcion !='i');
	return EXIT_SUCCESS;
}
