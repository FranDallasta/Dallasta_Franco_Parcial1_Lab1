int mostrarElectros2020(est_electro array[], LARGO)
{
	int i;
	int retorno = -1;
	if(array != NULL && LARGO >= 0)
	{
		for (i=0; i<LARGO; i++)
		{
			if(array[i].isEmpty != VACIO)
			{
				if(array[i].anio_electro)
				{
					mostrarElectrodomestico(array[i]);
					retorno = 0;
				}
			}
		}
	}
	return retorno;
}
